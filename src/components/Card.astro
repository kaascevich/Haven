---
import { slugifyStr } from "@utils/slugify";
import Datetime from "@components/Datetime";
import type { CollectionEntry } from "astro:content";

export interface Props {
  href?: string;
  frontmatter: CollectionEntry<"blog">["data"];
  secHeading?: boolean;
}

const { href, frontmatter, secHeading = true } = Astro.props;
const { title, pubDatetime, modDatetime, description } = frontmatter;

const headerProps = {
  style: { viewTransitionName: slugifyStr(title) },
  className: "text-lg font-medium decoration-wavy hover:underline",
};
---

<li class="my-6">
  <a
    href={href}
    class="inline-block text-lg font-medium text-skin-accent decoration-wavy underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0"
  >{
    secHeading
      ? (<h2 {...headerProps}>{title}</h2>)
      : (<h3 {...headerProps}>{title}</h3>)
  }</a>
  <Datetime pubDatetime={pubDatetime} modDatetime={modDatetime}/>
  <p>{description}</p>
</li>

---
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@utils/slugify";

export interface Props {
  href?: string;
  frontmatter: CollectionEntry<"songs">["data"];
}

const { frontmatter } = Astro.props;
---

<li class="my-6">
  <div class="inline-block text-lg font-medium text-skin-accent">
    <h2 class="text-lg font-medium">{frontmatter.title}</h2>
  </div>

  <p>{frontmatter.composer}</p>

  <audio
    class="pt-1"
    src={`/assets/songs/${slugifyStr(frontmatter.title)}.mp3`}
    preload="metadata"
    controls
  />
</li>

---
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import SongCard from "@components/SongCard.astro";
import { SITE } from "@config";
import type { CollectionEntry } from "astro:content";

export interface Props {
  songs: CollectionEntry<"songs">[];
}

const { songs } = Astro.props;

const originals = songs.filter(song => !song.data.composer)
const remixes = songs.filter(song => song.data.composer)

const pageDesc = "all the songs I've created or remixed";
---

<Layout title={`songs | ${SITE.title}`} description={pageDesc}>
  <Header activeNav="songs"/>
  <Main pageTitle="songs" pageDesc={pageDesc}>
    <section id="originals">
      <h2>originals</h2>
      <ul class="song-list">
        {originals.map(({ data }) => (<SongCard frontmatter={data}/>))}
      </ul>
    </section>

    <section id="remixes">
      <h2>remixes</h2>
      <ul class="song-list">
        {remixes.map(({ data }) => (<SongCard frontmatter={data}/>))}
      </ul>
    </section>
  </Main>

  <Footer noMarginTop/>
</Layout>

<style>
  section:has(.song-list) {
    @apply pb-6 pt-3 px-0;
  }
  section:has(.song-list) h2 {
    @apply text-2xl font-semibold tracking-wide mb-4;
  }
  .song-list {
    @apply flex flex-row gap-6 flex-wrap;
  }
</style>
